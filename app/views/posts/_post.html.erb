
    <a class="new__post" href="#">
      <%= image_tag post.thumbnail.url if post.thumbnail? %>
      <div class="post__text">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <div class="post__detail">
          <div class="post__price">¥<%= post.price %></div>
          <div class="post__evaluation"></div>
          <div class="post__comment">37件</div>
        </div>
        <div class="post__footer">
          <div class="post__footer__left">
            <%= image_tag current_user.image.url, size: "50x50" %>
            <div class="user__info">
              <div class="user__info__name"><%= link_to post.user.name, post.user %></div>
              <div class="user__info__date"><%= time_ago_in_words(post.created_at) %>前</div>
            </div>
          </div>
          <div class="post__footer__right">
            <div class="post__category">ブログ・メディア運営</div>
            <% if current_user?(post.user) %>
              <%= link_to "delete", post, method: :delete,
                                               data: { confirm: "You sure?" } %>
            <% end %>
          </div>
        </div>
      </div>
    </a>